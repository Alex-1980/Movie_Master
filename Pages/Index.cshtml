@page
@model IndexModel

<div class="searchResults">
    <h1>Latest Movies:</h1>
    <form method="POST" asp-page-handler="Details">
        @for(int i = 0; i < Model.posterURLS.Count; i++) {
            string path = "https://image.tmdb.org/t/p/w500" + Model.posterURLS[i];
            <div class="thumbs" style="background: url(@path); background-size: cover;"
                title="@Model.overviews[i]">
                <input type="submit" class="thumbButton" name="movieID" value="@Model.movieIDS[i]" />
            </div>
        }
    </form>
</div>
<div class="searchResults">
    <h1>Top Rated Movies:</h1>
    <form method="POST" asp-page-handler="Details">
        @for(int i = 0; i < Model.posterURLSTops.Count; i++) {
            string path = "https://image.tmdb.org/t/p/w500" + Model.posterURLSTops[i];
            <div class="thumbs" style="background: url(@path); background-size: cover;"
                title="@Model.overviewsTops[i]">
                <input type="submit" class="thumbButton" name="movieID" value="@Model.movieIDSTops[i]" />
            </div>
        }
    </form>
</div>